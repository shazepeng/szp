<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.j1808.mapper.RoleMapper">
    <resultMap id="UserRoleMap" type="com.qf.j1808.dto.UserRoleDto">
        <id column="ROLEID" property="roleId"/>
        <result column="ROLENAME" property="roleName"/>
        <result column="URID" property="urid"/>
        <result column="UID" property="uid"/>
        <result column="RID" property="rid"/>
    </resultMap>
    <!-- 查询所有角色 -->
    <select id="selectAllRole" resultType="com.qf.j1808.pojo.RoleInfo">
        select * from roleinfo
    </select>
    <!-- 修改角色状态 -->
    <update id="undateRoleInfo" parameterType="com.qf.j1808.pojo.RoleInfo">
        update roleinfo set state=#{state} where roleid=#{roleId}
    </update>
    <!-- 查询已分配角色 -->
    <select id="selectUid" parameterType="int" resultType="com.qf.j1808.pojo.RoleInfo">
        select * from ROLEINFO r,USER_ROLE ur where r.ROLEID=ur.rid and ur.UID=#{uid}
    </select>
    <!-- 查询未分配角色 -->
    <select id="selectNoUid" parameterType="int" resultMap="UserRoleMap">
       select * from ROLEINFO r left join USER_ROLE ur on r.ROLEID=ur.rid and ur.UID=#{uid}
    </select>

    <select id="selectRoleByName" parameterType="java.lang.String" resultType="com.qf.j1808.pojo.RoleInfo">
        select * from ROLEINFO where ROLENAME=#{param}
    </select>
    <!-- 增加角色 -->
    <insert id="insertUR" parameterType="com.qf.j1808.pojo.UserRole">
        insert into USER_ROLE values (null,#{uid},#{rid})
    </insert>
    <!-- 删除角色 -->
    <delete id="deleteUR" parameterType="com.qf.j1808.pojo.UserRole" >
        delete from USER_ROLE where UID=#{uid} and RID=#{rid}
    </delete>

</mapper>