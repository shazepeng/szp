<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.j1808.mapper.ApplyMapper">
    <insert id="addApply" parameterType="com.qf.j1808.vo.ApplyVo">
        insert into apply values (null,#{applyType},#{applyName},#{applyIdCard},#{applyPhone},#{applyPic},#{applyEmail},#{userId},'未审核')
    </insert>

    <select id="selectApply" parameterType="int" resultType="com.qf.j1808.pojo.Apply">
        select a.* from apply a,userinfo u where a.userid=u.userid and a.userid = #{userId};
    </select>

    <select id="allApply" resultType="com.qf.j1808.pojo.Apply">
        select * from apply where applyCheck='未审核'
    </select>

    <select id="updateApply" parameterType="com.qf.j1808.pojo.Apply">
        update apply set applyCheck = #{applyCheck} where applyid = #{applyId}
    </select>

    <select id="getOneApply" parameterType="int" resultType="com.qf.j1808.pojo.Apply">
        select * from apply where applyId=#{applyId}
    </select>
</mapper>