<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qf.j1808.mapper.UserMapper">
    <!-- 查询角色id -->
    <select id="selectRoleId" parameterType="int" resultType="com.qf.j1808.pojo.UserRole">
        select ur.* from userinfo u,user_role ur where u.userid=ur.uid and u.userid=#{uid}
    </select>

    <!-- 查询所有用户 -->
    <select id="selectAll" resultType="com.qf.j1808.pojo.UserInfo">
        select * from userinfo
    </select>
    <!-- 添加用户|注册用户 -->
    <insert id="addUserInfo" parameterType="com.qf.j1808.pojo.UserInfo">
        insert into userinfo values(null,#{userName},#{account},#{password},'unlock',#{email},#{grade})
    </insert>
    <!-- 注册验证用户名是否存在 -->
    <select id="selectAccount" resultType="com.qf.j1808.pojo.UserInfo">
        select * from userinfo where account=#{account}
    </select>
    <!-- 根据账户密码查询 登陆 -->
    <select id="selectUserInfo" resultType="com.qf.j1808.pojo.UserInfo">
        select * from userinfo where account = #{account} and password = #{password}
    </select>
    <select id="selectLogin" resultType="com.qf.j1808.pojo.UserInfo">
        select * from userinfo where account = #{account} and password = #{password}
    </select>
    <!-- 修改用户信息 -->
    <select id="getOneUserInfo" parameterType="int" resultType="com.qf.j1808.pojo.UserInfo">
        select * from userinfo where userid=#{userId}
    </select>
    <update id="updateUserInfo" parameterType="com.qf.j1808.pojo.UserInfo">
        update userinfo set state=#{state} where userid=#{userId}
    </update>

    <select id="selectUserLike" resultType="com.qf.j1808.pojo.UserInfo">
        select * from userinfo
        <where>
            <if test="account != null">
                or account like concat('%',#{account},'%')
            </if>
            <if test="userName != null">
                or userName like concat('%',#{userName},'%')
            </if>
        </where>
    </select>
</mapper>